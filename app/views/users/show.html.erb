<%= render "shared/flash_messages" %>
<div class="w-[90%] md:w-150 lg:w-250 lg:my-26 my-6 container mx-auto px-10 py-10 bg-white shadow-sm shadow-2xs rounded-xl">
  <div class="mb-8 font-bold text-center text-2xl text-yellow-900">
    マイページ
  </div>
  <div class="gap-5 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-4 justify-items-center">

    <div class="w-50 h-50 p-8 text-center bg-white border-2 border-yellow-900 shadow-2xs rounded-lg">
      <%= link_to my_posts_user_path(current_user.id) do %>
        <div class= "flex flex-wrap justify-center">
          <%= image_tag "mypage_myposts_icon.png" %>
          <div class="p-2 text-base text-center font-bold text-yellow-900">
            自分の投稿
          </div>
        </div>
      <% end %>
    </div>

    <div class="w-50 h-50 p-8 text-center bg-white border-2 border-yellow-900 shadow-2xs rounded-lg">
      <%= link_to likes_posts_path do %>
        <div class= "flex flex-wrap justify-center">
          <%= image_tag "mypage_likes_icon.png" %>
          <div class="p-2 text-base text-center font-bold text-yellow-900">
            <span>お気に入り投稿</span>
          </div>
        </div>
      <% end %>
    </div>

    <div class="w-50 h-50 p-8 text-center bg-white border-2 border-yellow-900 shadow-2xs rounded-lg">
      <%= link_to profile_user_path(current_user.id) do %>
        <div class= "flex flex-wrap justify-center">
          <%= image_tag "mypage_profile_icon.png" %>
          <div class="p-2 text-base text-center font-bold text-yellow-900">
            <span>プロフィール</span>
          </div>
        </div>
      <% end %>
    </div>

    <div class="w-50 h-50 p-8 text-center bg-white border-2 border-yellow-900 shadow-2xs rounded-lg">
      <%= link_to user_authentication_path do %>
        <div class= "flex flex-wrap justify-center">
          <%= image_tag "mypage_settings_icon.png" %>
          <div class="p-2 text-base text-center font-bold text-yellow-900">
            <span>個人情報変更</span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>