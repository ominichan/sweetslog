<div class='flex flex-wrap justify-center mb-6'>
  <div class=" col-md-10 col-lg-8">
    <div class= "m-4 text-center text-3xl text-yellow-950">
      ログイン
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mb-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "w-96 bg-stone-50 border border-stone-950 rounded-md", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: "w-96 bg-stone-50 border border-stone-950 rounded-md", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions flex justify-center">
        <%= f.submit "Log in", class: "mt-4 w-44 rounded-md bg-yellow-950 p-3 text-white focus:outline-none cursor-pointer" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
