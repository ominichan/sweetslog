<div class='flex flex-wrap justify-center'>
  <div class=" col-md-10 col-lg-8">
    <div class= "mt-15 mb-10 font-bold text-center text-3xl text-yellow-900">
      ログイン
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <% if alert.present? %>
        <p class="m-4 px-4 py-2 rounded-md text-rose-950 bg-rose-200 border-2 border-rose-900">
          <%= alert %>
        </p>
      <% end %>

      <div class="field mb-6">
        <%= f.email_field :email, class: "w-96 p-1.5 bg-stone-50 border border-stone-950 rounded-md", autofocus: true, placeholder:"メールアドレス" %>
      </div>

      <div class="field mb-6">
        <%= f.password_field :password, class: "w-96 p-1.5 bg-stone-50 border border-stone-950 rounded-md", placeholder:"パスワード" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mb-4">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions flex justify-center">
        <%= f.submit (t "device.sessions.new.log_in"), class: "mt-4 w-44 rounded-md bg-yellow-900 p-3 text-white focus:outline-none cursor-pointer" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
