<div class='flex flex-wrap justify-center mb-6'>
  <div class=" col-md-10 col-lg-8">
    <div class= "m-4 text-center text-3xl text-yellow-950">
      <%= @post.title %>
    </div>
    <div class= "mt-10 text-yellow-950">
      <%= @post.body %>
    </div>
    <% if @post.user == current_user %>
      <div class= "flex flex-col">
        <div class= "mt-10 text-yellow-950">
          <%= link_to "編集する", edit_post_path(@post), class: "focus:outline-none cursor-pointer" %>
        </div>
        <div class= "mt-4 text-yellow-950">
          <%= link_to "削除する", '#', class: "focus:outline-none cursor-pointer", data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" } %>
        </div>
      </div>
    <% end %>
  </div>
</div>