<%= render "shared/flash_messages" %>

<div class="my-10">
  <%= render 'search_form', q: @q, url: posts_path %>
</div>

<% if @posts.present? %>
  <div class="max-w-275 mx-auto">
    <div class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-5 justify-items-center">
      <%= render @posts %>
    </div>
    <nav class="mt-10">
      <%= pagy_nav(@pagy).html_safe %>
    </nav>
  </div>
<% else %>
  <div class="mb-3 text-center">掲示板がありません</div>
<% end %>
