<%= render 'shared/flash_messages' %>
  <div class= "mt-15 font-bold text-center text-3xl text-yellow-900">
    投稿一覧ページ
  </div>
  <%= render 'search_form', q: @q, url: posts_path %>
  <% if @posts.present? %>
    <div class="mt-15 max-w-screen-xl mx-auto">
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-7 justify-items-center">
        <%= render @posts %>
      </div>
      <nav class="my-custom-pagination">
        <%= pagy_nav(@pagy).html_safe %>
      </nav>
    </div>
  <% else %>
    <div class="mb-3 text-center">掲示板がありません</div>
  <% end %>
